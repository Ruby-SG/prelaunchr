<div class="background clearfix">
    <%= render 'signup_msg'%>
    <%= render 'header' %>
    <!--/.wrap-->
    <div class="image-left">
        <img src="images/referral-image.png">
    </div>
    <div class="text-right">
        <h4>HELP US WITH BETA TESTING</h4>
        <h2>INVITE FRIENDS &amp; EARN REWARDS</h2>
        <p>Share your unique link via email, Facebook or Twitter and earn great rewards from SAVIL.ME for each friend who signs up.</p>
        <form class="referral-copy">
            <br class="clearit" />
            <div>
                <input type="text" value="<%= root_url %>?ref=<%= @user.referral_code %>" class="copy_textfield" id='copy-url'/>
            </div>
            <button type="button" id='click-to-copy' data-clipboard-target="#copy-url">COPY</button>
            <br class="clearit" />
            <% twitter_message = "Savil.me is evolving." %>
            <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>&ref=<%= CGI::escape(@user.referral_code) %>&title=Savil" class="facebook-icon" target="_blank"><img src="images/facebook-button.png"></a>
            <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="twitter-icon" target="_blank"><img src="images/twitter-button.png"></a>
        </form>
    </div>
</div>
<% referrals_count = @user.referrals.count %>

<%
  words = ''
  if referrals_count == 1
    words = 'friend has'
  elsif
    words = 'friends have'
  end
%>

<div class="friends-joint clearfix">
    <% if referrals_count == 0 %>
      <p>No friends have joined - yet!</p>
      <p>Keep spreading the word and check back again soon.</p>
    <% else %>
      <p class="place brandon"><span><%= referrals_count %></span> <%= words %> joined</p>
    <% end %>

    <ul class="progress-friends">
        <li>
            <p>friends joined</p>
        </li>
        <li>
            <p class="friend-total <%= selected_class(5, 10, referrals_count) %>">5</p>
        </li>
        <li>
            <p class="friend-total <%= selected_class(10, 25, referrals_count) %>">10</p>
        </li>
        <li>
            <p class="friend-total <%= selected_class(25, 50, referrals_count) %>">25</p>
        </li>
        <li>
            <p class="friend-total <%= selected_class(50, 1000, referrals_count) %>">50</p>
        </li>
    </ul>
    <div class="progress">
        <div class="progress-bar" style='width: <%= width_class(referrals_count) %>'></div>
    </div>
    <ul class="progress-friends-award">
        <li>
            <p>REWARDS EARNED</p>
        </li>
        <li>
            <p class="friend-text">One-year subscription to GQ® magazine</p>
        </li>
        <li>
            <p class="friend-text">One-year subscription to Dollar Shave Club®</p>
        </li>
        <li>
            <p class="friend-text">$100 credit for use at Savile.Me</p>
        </li>
        <li>
            <p class="friend-text">One premium fitted suit</p>
        </li>
    </ul>
</div>
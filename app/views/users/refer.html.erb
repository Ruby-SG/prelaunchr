<div class="header">
  <div class="content">
    <div class="logo brandon">Mort Subite</div>
  </div>
</div>
<div class="hero">
  <div class="page-content clearfix">
    <div class="img-logo">
      <%= image_tag("home/mortsubtilg.png")%>
    </div>
    <div class="share-wrap">
      <p class="why brandon">Bring your friends to italy with you</p>
      <p class="title brandon">INVITE FRIENDS & Earn  Mort Subite</p>
      <p class="subtitle brandon">Share your unique link via email, Facebook or Twitter and earn<br> Mort Subite goods for each friend who signs up.</p>
        <div class="copy-link brandon">
         <%= root_url %>?ref=<%= truncate(@user.referral_code, :length => 10, :seperator => '...') %>
          <input type="hidden" id="link-copy-clipboard"  value="<%= root_url %>?ref=<%= @user.referral_code %>">
          <a class="link-copy" href="javascript:void(0)" onclick="copyToClipBoard()">
              <%= image_tag("refer/c.jpg", class: "copy-img", :onclick => 'alert("Copied successfully!")') %>
          </a>
         </div>
          <% twitter_message = "Welcome to Mort Subite, Where we bring you Austinâ€™s only authentic wood fired Italian sandwiches known as the puccia (POO*CHAH)." %>

      <div class="social-links">
        <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&title=Mort Subite" class="fb" target="_blank"></a>
        <div class="sep"></div>
        <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="twit" target="_blank"></a>
      </div>
    </div>
  </div>
</div>
<% referrals_count = @user.referrals.count
  stops = User::REFERRAL_STEPS
  found = nil
  stops.reverse_each { |stop|
    if stop["count"] <= referrals_count and !found
      stop["selected"] = true
      found = stop
    else
      stop["selected"] = false
    end
  }
  %>
<div class="prizes <% if found %>prize-<%= found["class"] %><% end %>">
  <div class="page-content">
    <p class="callout brandon">Here's How It Works:</p>
    <ul class="products clearfix products-desktop">
      <li class="title brandon">
        <p class="friends">Friends Joined</p>
        <p class="rewards">MORT SUBITE</p>
      </li>

      <% stops.each do |stop| %>
        <li class="product brandon <% if stop["selected"] %>selected<% end %> <% if stop["class"] == 'five' %>last<% end %>">
          <div class="circle"><%= stop["count"] %></div>
          <div class="sep"></div>
          <p><%= stop["html"].html_safe %></p>
  <!--         <div class="tooltip">
            <img src="<%= stop["image"] %>" height="254">
          </div> -->
        </li>
      <% end %>
    </ul>

    <div class="products-mobile">
      <div class="rows">
        <div class="left-part"><span>FRIENDS JOINEDS</span></div>
        <div class="right-part"><span>MORT SUBITE</span></div>
      </div>
      <% stops.each do |stop| %>
        <div class="rows">
          <div class="left-part circle"><p><%= stop["count"] %></p></div>
          <div class="right-part" ><p><%= stop["html"].html_safe %></p></div>
        </div>
      <% end %>
    </div>
    <div class="progress">
      <div class="mover">
        <div class="bar clearfix"></div>
      </div>
    </div>
    <%
      words = ''
      if referrals_count == 1
          words = 'friend has'
      elsif
          words = 'friends have'
      end

      %>
    <% if referrals_count == 0 %>
    <p class="place brandon"><span>No</span> friends have joined...Yet!</p>
    <% else %>
    <p class="place brandon"><span><%= referrals_count %></span> <%= words %> joined</p>
    <% end %>
    <!-- <a class="policy brandon" href="/privacy-policy" target="_blank">Privacy Policy</a> -->
  </div>
</div>